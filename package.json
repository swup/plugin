{
  "name": "@swup/plugin",
  "amdName": "SwupPlugin",
  "version": "1.0.1",
  "description": "Swup base plugin",
  "type": "module",
  "source": "src/index.js",
  "main": "./dist/index.cjs",
  "module": "./dist/index.module.js",
  "unpkg": "./dist/index.umd.js",
  "exports": "./dist/index.modern.js",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "microbundle -f modern,esm,cjs && microbundle -f umd --external none",
    "lint": "prettier src/**/*.{js,mjs} --write",
    "prepublish": "npm run build"
  },
  "bin": {
    "swup-plugin": "./bin/swup-plugin.js"
  },
  "author": "Georgy Marchuk",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/swup/plugin.git"
  },
  "dependencies": {
    "chalk": "^5.2.0",
    "microbundle": "^0.15.1",
    "prettier": "^2.7.1",
    "shelljs": "^0.8.5",
    "shelljs-live": "^0.0.5"
  },
  "devDependencies": {
    "@swup/prettier-config": "^1.0.0",
    "swup": "file:../swup"
  },
  "prettier": "@swup/prettier-config"
}
